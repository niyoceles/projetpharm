<div class="row">
    <% result.forEach((item) => { %>
    <div class="col-sm-6 col-md-4 my-1">
        <form action="/add-to-cart/<%= item.title %>" method="POST">
            <div class="card" style="width: 18rem;">
                <img src="images/<%= item.image %>" id="img" name="img" height="130px"
                    class="card-img-top img-responsive" alt="...">
                <div class="card-body">
                    <input type="text" name="title" id="title" class="card-title" value="<%= item.id %>" hidden>
                    <h5 class="card-title"><%= item.title %></h5>
                    <h5 class="card-title"><%= item.pharmacyname %></h5>
                    <p class="card-text"><%= item.description %></p>
                    <div class="clearfix">
                        <hr>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="price pull-left">$<%= item.price %></div>
                            </div>
                            <div class="col-md-8">

                                <!--<a class="btn btn-warning" href="/add-to-cart/<%= item.id %>">Add to Cart <i class="fas fa-shopping-cart pull-right"></i></a>-->
                                <button type="submit" class="btn btn-warning" data-toggle="modal"
                                    data-target="#exampleModalLong">
                                    Buy now <i class="fas fa-shopping-cart pull-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <% }); %>
</div>


