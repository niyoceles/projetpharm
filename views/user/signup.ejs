<%- include('../layouts/header'); -%>

<div class="row mt-5">
    <div class="col-md-4 m-auto col-offset-4">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-user-plus"> Sign Up</i></h1>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <input type="text" id="first" name="first" class="form-control" placeholder="First Name">
                </div>
                <div class="form-group">
                    <input type="text" id="last" name="last" class="form-control" placeholder="Last Name">
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Gender</label>
                    </div>
                    <select class="custom-select" id="gender" name="gender" id="inputGroupSelect01">
                        <option selected>Your gender...</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div><br>
                <div class="form-group">
                    <input type="text" id="phone" name="phone" class="form-control" placeholder="Enter your phone number">
                </div>
                <div class="form-group">
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <input type="text" id="address" name="address" class="form-control" placeholder="Enter your physical address">
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
                </div>
                <div class="form-group">     
                    <button type="submit" class="btn btn-success btn-block">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../layouts/footer'); -%>